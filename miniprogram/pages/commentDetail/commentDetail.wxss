/* miniprogram/pages/commentDetail/commentDetail.wxss */
.title{
  width:100%;
  height:80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color:#eee;
  border-bottom:1px solid #ccc;
}
.comment-head{
  height:300rpx;
  /* border:1px solid; */
  display:flex;
   flex-direction: row;
   background-color:#fff;
}
.imgBox{
  width:100rpx;
  height:100rpx;
  padding:20rpx;
}
.headImg{
  width:100%;
  height:100%;
  border-radius: 50%;
}
.username{
  margin-top:30rpx;
  line-height:45rpx;
}
.time{
  color:#888;
  font-size:20rpx;
}
.name{
  font-size:28rpx;
  color:#f40;
}
.content{
  font-size:28rpx;
}
.comment-replay{
  background-color:#eee;
}
.replay-item{
  display:flex;
  flex-direction: row;
  height:200rpx;
}
.replay-right{
  border-bottom:1px solid #ccc;
  width:100%;
  padding:10rpx;
  box-sizing: border-box;
}
.replay-name{
  font-size:28rpx;
  color:#888;
}
.replay-time{
  color:#888;
  font-size:20rpx;
}
.replay-content{
  font-size:26rpx;
  margin-top:10rpx;
}
.replay-inp{
  position: fixed;
  bottom:0;
  height: 70rpx;
  background-color:#fff;
  width:100vw;
}
.inp{
  width:90vw;
  height:40rpx;
  border:1rpx solid #eee;
  margin:10rpx auto;
  padding-left:20rpx;
  box-sizing: border-box;
}
.place-font{
  font-size:20rpx;
}